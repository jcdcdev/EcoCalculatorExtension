{
  "manifest_version": 3,
  "name": "Good Game Eco Calculator",
  "version": "1.0.0",
  "description": "Use this extension to help keep prices fair on Good Game!",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://eco-calc.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}